<div class="grid gap-2">
  <label>
    Starting value ($)
    <input
      type="number"
      min="0"
      value={{this.inputs.amount}}
      {{on 'input' this.updateStartingValue}}
    >
  </label>

  <label>
    Average over (days)

    <input
      type="number"
      min="1"
      max="30"
      value={{this.inputs.averageOver}}
      {{on 'input' this.updateAverageOver}}
    >
  </label>

  <label>
    DEX

    <select {{on 'change' this.updateDex}}>
      {{#each this.inputs.DEXes as |dex|}}
        <option value={{dex}}>{{dex}}</option>
      {{/each}}
    </select>
  </label>
</div>